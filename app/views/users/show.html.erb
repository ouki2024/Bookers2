
    <div class ="container">
        <div class ="row">
            <div class ="col-md-3">
                <h2>User info</h2>
                <%= render 'users/user', user: @user %>

                <h2>New book</h2>
                <%= render 'books/book', book: @book %>
            </div>


            <div class ="col-md-8 offset-md-1">
                <h2>Books</h2>
                <table class ="table">

                    <thead>
                        <tr>
                            <th></th>
                            <th>Title</th>
                            <th>Opinion</th>
                            <th>star</th>
                            <th colspan = "3"></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% @books.each do |book| %>
                        <tr>
                            <td>
                                <a href="/users/<%= book.user.id %>">
                                    <%= image_tag book.user.get_profile_image(100,100) %>
                                </a>
                            </td>
                            <td>
                                <a class="book.id" href="<%= book_path(book.id) %>">
                                    <%= book.title %>
                                </a>
                            </td>
                            <td><%= book.body %></td>
                            <td><%= render "books/static.rate", book: book %></td>
                        </tr>
                        <% end %>

                    </tbody>


                </table>
            </div>
        </div>
    </div>