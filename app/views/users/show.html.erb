
    <div class ="container">
        <div class ="row">
            <div class ="col-md-3">
                <h2>User info</h2>
                <%= render 'users/user', user: @user %>
        
                <h2>New book</h2>
                <%= render 'books/book', book: @book %>
            </div>
            
            <div class ="offset-md-1"></div>
            <div class ="col-md-8">
                <h2>Books</h2>
                <table class ="table">
                    
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Opinion</th>
                            <th colspan = "3"></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% @books.each do |book| %>
                        <tr>
                            <td>
                            
                            <%= image_tag book.user.get_profile_image(100,100) %>
                            
                            </td>
                            <td><%= link_to book.title, book_path(book.id) %></td>
                            <td><%= book.body %></td>
                        <% end %>
                        </tr>
                    </tbody>
                    
                    
                </table>
            </div>
        </div>
    </div>