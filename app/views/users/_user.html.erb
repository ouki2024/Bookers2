
<table class="table">
  
  <thead>
    <tr>
      <%= image_tag user.get_profile_image(100,100) %>
    </tr>
  </thead>
  
  <tbody>
    <tr>
      <th>Name</th>
      <th><%= @user.name %></th>
    </tr>
    <tr>
      <th>Introduction</th>
      <th><%= @user.introduction %></th>
    </tr>
  </tbody>
</table>


<% if current_user == @user %>
<div class="row">
 
    <%= link_to edit_user_path(@user), class: "btn btn-primary" do %>
     <i class="fa-solid fa-user-gear"></i>
    <% end %>

</div>
<% end %>

      

  
