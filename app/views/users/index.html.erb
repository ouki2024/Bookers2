<h1>一覧画面</h1>


    <div class ="container">
        <div class ="row">
            <div class ="col-md-3">
                <h2>User info</h2>
                    <%= render 'users/user', user: @user %>
                  
                <h2>New book</h2>
                    <%= render 'books/book', book: @book %>
            
            <div class ="col-md-8">
                <h2>Books</h2>
                <table class ="table">
                    <thead>
                        <tr>
                            <th>Image</th>
                            <th>Title</th>
                        </tr>
                    </thead>
                    
                    <tbody>
                         <% @users.each do |user| %>
                        <tr>
                            <td><%= image_tag user.get_profile_image(100,100) %></td>
                            <td><%= user.name %></td>
                            <td><%= link_to "Show", "/users/#{user.id}" %></td>
                        <% end %>
                        </tr>
                    </tbody>
                    
                </table>
            </div>
        </div>
    </div>