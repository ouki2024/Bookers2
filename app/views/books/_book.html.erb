<%= form_with model: book do |f| %>

  <div class="form-title row">
    <%= f.label :Title %>
    <%= f.text_field :title, value:"" %>
  </div>

  <div class="form-body row">
  	<%= f.label :Opinion %>
    <%= f.text_area :body, value:"" %>
  </div>

  <div class="actions row">
    <%= f.submit 'Create Book'%>
    
  </div>
<% end %>